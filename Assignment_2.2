body {
    border: 8px solid #FFB74D; /* A warm color to improve visibility */
    margin: 0;
    background-image: url("https://i.pinimg.com/736x/15/1a/2e/151a2ee727935d4e039050d4fb7fa513.jpg");
    background-repeat: no-repeat;
    background-size: cover;
}

#heading {
    display: flex;
    justify-content: space-between;
    margin: 30px 30px;
}

#heading-1 {
    border: 7px solid #FF7043; /* Changed to a more visible color */
    border-radius: 35px;
    height: 150px;
    width: 350px;
    font-weight: bold;
    font-style: italic;
    font-size: xx-large;
    background-color: #263238; /* Dark background for better text contrast */
    color: #FFEB3B; /* Bright yellow for better visibility */
    padding-left: 23px;
}

.h1 {
    display: flex;
    justify-content: center;
    padding-top: 10px;
}

#heading-2 {
    font-weight: lighter;
    font-style: oblique;
    font-size: xx-large;
    border: 7px solid #FF7043;
    border-radius: 35px;
    height: 80px;
    width: 480px;
    margin-left: -20px;
    margin-top: 10px;
    padding-left: 50px;
    background-color: #263238;
    color: #FFEB3B;
    display: flex;
    align-items: self-end;
    justify-content: space-around;
}

#heading-3 {
    font-weight: bold;
    font-style: italic;
    font-size: x-large;
    height: 150px;
    width: 400px;
    border: 7px solid #FF7043;
    border-radius: 35px;
    background-color: #263238;
    color: #FFEB3B;
}

.h3 {
    display: flex;
    justify-content: center;
    padding-top: 18px;
}

#excoffer {
    display: flex;
}

#offer {
    height: 430px;
    width: 430px;
    border: 7px solid #FF7043;
    border-radius: 50%;
    background-color: #546E7A; /* A softer contrast color */
    margin-top: 200px;
}

.p1 {
    color: #FFEB3B; /* Yellow for contrast */
    text-decoration: underline;
    text-transform: uppercase;
    font-weight: bold;
    font-size: x-large;
    font-style: italic;
    margin-top: 100px;
    margin-left: 110px;
}

.p2 {
    color: #FFEB3B; 
