#regoffer {
    height: 770px;
    width: 500px;
    border: 7px dashed #FF7043;
    display: flex;
    justify-content: center;
}

#regh1 {
    display: flex;
    justify-content: center;
    text-transform: uppercase;
    color: #FF7043;
}

#reg {
    width: 500px;
}

.form-details {
    display: flex;
    justify-content: center;
    font-size: larger;
    font-weight: 600;
    color: #FF7043;
}

.details {
    display: flex;
